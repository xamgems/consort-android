<resources>

    <!-- Main application theme. -->
    <style name="Theme.Main" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="TextViewTitleLight">
        <item name="android:textSize">54sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="TextViewRoomDark">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="EditTextWhite">
        <item name="android:textSize">20sp</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:height">35dp</item>
        <item name="android:minEms">10</item>
        <item name="android:maxLength">10</item>
    </style>

</resources>
